@page "/PostDetails/{id:int}"
@using Domain.Models
@using HttpClients.ClientInterfaces
@using Domain.DTOs
@using Microsoft.AspNetCore.Components
@inject IPostService postService
@inject IUserService userService
@inject NavigationManager navMgr

<div class="card">
    @if (users == null)
    {
        <label>Loading users...</label>
    }
    else if (!users.Any())
    {
        <label>No users, you cannot create a Todo</label>
    }
    else if (dto == null)
    {
        <label>Loading Todo data...</label>
    }
    else
    {
        <h3>@dto.Title</h3>
        <label>@dto.Body</label>

        <div>
            <h4>Author: @dto.OwnerUsername</h4>
        </div>

        <div>
            <h4>Comments:</h4>
            @if (dto.Comments != null && dto.Comments.Any())
            {
                @foreach (var comment in dto.Comments)
                {
                    <div>
                        <p>Author: @comment.Username</p>
                        <p>Body: @comment.Body</p>
                    </div>
                }
            }
            else
            {
                <p>No comments available</p>
            }
        </div>
    }
    @if (!string.IsNullOrEmpty(msg))
    {
        <label style="color: red">@msg</label>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private PostWithCommentsDto dto = null!;
    private string msg = "";
    private IEnumerable<User>? users;

    protected override async Task OnInitializedAsync()
    {
        msg = "";
        try
        {
            users = await userService.GetUsers();
            dto = await postService.GetPostWithCommentsAsync(Id);
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }
}